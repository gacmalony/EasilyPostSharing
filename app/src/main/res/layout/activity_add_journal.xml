<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3498db"> <!-- Blue background color -->

    <!-- Top-Left Plain Texts -->
    <TextView
        android:id="@+id/title_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Title"
        android:textSize="16sp"
        android:textColor="#ffffff"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/date_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Date"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_below="@id/title_display"
        android:layout_marginStart="26dp"/>

    <!-- Center Plain Texts -->
    <EditText
        android:id="@+id/title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Title"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/thoughts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoughts"
        android:textSize="16sp"
        android:maxLength="300"
        android:textColor="#ffffff"
        android:layout_below="@id/title_input"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/postCameraButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/baseline_add_a_photo_24"
        android:scaleType="centerCrop"
        android:layout_above="@id/title_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:id="@+id/reload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_autorenew_24"
        android:visibility="invisible"
    android:layout_below="@id/thoughts"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"/>


    <Button
        android:id="@+id/postitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUST DO IT"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_below="@id/reload"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
</layout>